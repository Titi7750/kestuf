{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<main class="container p-2">
		<form method="post">
			{% if app.user %}
				<div class="mb-3">
					Vous êtes connecté en tant que
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Déconnexion</a>
				</div>
			{% endif %}

			<div class="text-center">
				<h1 class="h3 mb-3 font-weight-normal color-main fw-black fs-36px">Mais Kestuf' ?</h1>
				<p class="fw-bold fs-24px">Connecte-toi vite !</p>
			</div>

			<div class="form">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				{% if error %}
					<div class="alert alert-danger mb-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<label for="username" class="fw-regular fs-18px">Ton adresse mail</label>
				<div class="d-flex justify-content-center align-items-center flex-column">
					<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mb-3" autocomplete="email" placeholder="Adresse mail" required autofocus>
				</div>

				<label for="password" class="fw-regular fs-18px">Ton mot de passe</label>
				<div class="d-flex justify-content-center align-items-center flex-column">
					<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" placeholder="Mot de passe" required>
				</div>

				<div class="checkbox">
					<label class="fw-regular fs-14px">
						<input type="checkbox" name="_remember_me">
						Se souvenir de moi
					</label>
				</div>

				<div class="mb-3">
					<a class="fw-regular fs-14px color-purple text-decoration-underline" href="#">Tu as oublié ton mot de passe ?</a>
				</div>

				<div class="d-flex justify-content-center align-items-center flex-column link-container">
					<button class="btn fw-bold fs-20px link-btn w-100" type="submit" aria-label="Se connecter">
						C'est parti !
					</button>
				</div>
					<a href="{{ path('app_register') }}" class="fw-bold fs-14px">Pas encore inscrit ?</a>
			</div>
		</form>
	</main>
{% endblock %}
