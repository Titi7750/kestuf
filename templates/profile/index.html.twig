{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!
{% endblock %}

{% block body %}
	{{ user.firstname }}
	{{ user.lastname }}
	{{ user.email }}

	<div>
		<h2>Listes des commentaires</h2>
		{% for commentUser in comments %}
			<div>
				{% if commentUser.active == 1 %}
					<p>{{ commentUser.content }}</p>
					<p>Publi√© par
						{{ commentUser.getUserSendComment().firstname }}
						le
						{{ commentUser.getCreatedAt()|date('d/m/Y H:i:s') }}</p>
				{% endif %}
			</div>
		{% endfor %}
	</div>
	<div>
		<h2>Ajouter un commentaire</h2>
		{{form_start(commentForm)}}
		{{form_widget(commentForm)}}
		{{form_end(commentForm)}}
	</div>
{% endblock %}
