{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}Détails du commentaire
{% endblock %}

{% block page_actions %}
	<a href="{{ path('admin_commentUser') }}" class="btn btn-secondary">
		<i class="fa fa-reply"></i>
		Retour à la liste des commentaires
	</a>
{% endblock %}

{% block main %}
	<div class="row">
		<div class="col-md-12">
			<div class="card card-primary card-outline">
				<div class="card-header">
					<h3 class="card-title">Détails du commentaire</h3>
				</div>
				<div class="card-body">
					<div class="form-group">
						<label>Contenu du commentaire</label>
						<p>{{ commentUser.content }}</p>
					</div>
                    <div class="form-group">
						<label>Utilisateur qui a reçu le commentaire</label>
						<p>{{ commentUser.getUserReceiveComment().firstname }}</p>
					</div>
                    <div class="form-group">
						<label>Utilisateur qui a envoyé le commentaire</label>
						<p>{{ commentUser.getUserSendComment().firstname }}</p>
					</div>
                    <div class="form-group">
						<label>Publié ?</label>
						<p>{{ commentUser.active == 1 ? 'En ligne' : 'Brouillon' }}</p>
					</div>
                    <div class="form-group">
						<label>Date de création</label>
						<p>{{ commentUser.getCreatedAt()|date('d/m/Y H:i:s') }}</p>
					</div>
                    <div class="form-group">
						{% if commentUser.active == 0 %}
                            <a href="{{ path('admin_commentUser_publish', {'id': commentUser.id}) }}" class="btn btn-outline-primary">
                                Mettre en ligne
                            </a>
                        {% else %}
                            <a href="{{ path('admin_commentUser_unpublish', {'id': commentUser.id}) }}" class="btn btn-outline-danger">
                                Mettre en brouillon
                            </a>
                        {% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
