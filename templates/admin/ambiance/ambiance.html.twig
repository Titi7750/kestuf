{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Les types d'ambiances
{% endblock %}

{% block page_actions %}
	<a class="btn btn-primary" href="{{ path('admin_ambiance_create') }}">Ajouter une ambiance</a>
{% endblock %}

{% block main %}
	<div class="table-responsive z-3">
		<table class="table table-hover">
			<thead class="thead-light">
				<tr>
					<th>Nom de l'ambiance</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for ambiance in ambiances %}
					<tr>
						<td>{{ ambiance.type }}</td>
						<td class="actions">
							<div class="dropdown">
								<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton{{ ambiance.id }}" data-bs-toggle="dropdown" aria-expanded="false">
									Actions
								</button>
								<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton{{ ambiance.id }}">
									<li>
										<a class="dropdown-item" href="{{ path('admin_ambiance_show', {'id': ambiance.id}) }}">
											<i class="fa-solid fa-eye"></i>
											Voir
										</a>
									</li>
									<li>
										<a class="dropdown-item" href="{{ path('admin_ambiance_update', {'id': ambiance.id}) }}">
											<i class="fa-solid fa-pen-to-square"></i>
											Modifier
										</a>
									</li>
									<li>
										<a class="dropdown-item text-danger" href="{{ path('admin_ambiance_delete', {'id': ambiance.id}) }}" data-bs-toggle="modal" data-bs-target="#modal-delete-{{ ambiance.id }}">
											<i class="fa-solid fa-trash"></i>
											Supprimer
										</a>
									</li>
								</ul>
							</div>
							<!-- Modal for delete confirmation -->
							<div class="modal fade" id="modal-delete-{{ ambiance.id }}" tabindex="-1" aria-labelledby="modalLabelDelete{{ ambiance.id }}" aria-hidden="true">
								<div class="modal-dialog">
									<div class="modal-content">
										<div class="modal-header">
											<h5 class="modal-title" id="modalLabelDelete{{ ambiance.id }}">Confirmer la suppression</h5>
											<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
										</div>
										<div class="modal-body">
											Êtes-vous sûr de vouloir supprimer cet élément ?
										</div>
										<div class="modal-footer">
											<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
											<a href="{{ path('admin_ambiance_delete', {'id': ambiance.id}) }}" class="btn btn-danger">Supprimer</a>
										</div>
									</div>
								</div>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}

{% block custom_styles %}
	<style>
		.table-hover tbody tr:hover {
			background-color: #f5f5f5;
		}

		.btn-outline-primary,
		.btn-outline-danger {
			margin-right: 5px;
		}
	</style>
{% endblock %}
