{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Détails de l'évènement{% endblock %}

{% block page_actions %}
	<a href="{{ path('admin_event') }}" class="btn btn-secondary">
		<i class="fa fa-reply"></i>
		Retour à la liste des évènements
	</a>
{% endblock %}

{% block main %}
	<div class="row">
		<div class="col-md-12">
			<div class="card card-primary card-outline">
				<div class="card-header">
					<h3 class="card-title">Détails de l'évènement</h3>
				</div>
				<div class="card-body">
					<div class="form-group">
						<label for="exampleInputEmail1">Nom de l'évènement</label>
						<p>{{ event.name }}</p>
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">Date de l'évènement</label>
						<p>{{ event.date|date('d/m/Y') }}</p>
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">Description de l'évènement</label>
						<p>{{ event.description }}</p>
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">Lieu de l'évènement</label>
						<p>{{ event.address }}</p>
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">Prix de l'évènement</label>
						<p>{{ event.price }}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
